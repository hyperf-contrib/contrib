{
    "name": "hyperf-contrib/contrib",
    "description": "Hyperf peripheral components",
    "type": "library",
    "require": {
        "php": ">=8.0"
    },
    "replace": {
        "hyperf-contrib/tracing": "*"
    },
    "autoload": {
        "psr-4": {
            "HyperfContrib\\Noop\\": "src/noop/src",
            "HyperfContrib\\Tracing\\": "src/tracing/src"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Flc",
            "email": "four_leaf_clover@foxmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "./vendor/bin/pest --ci"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
