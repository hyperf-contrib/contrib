{
  "name": "hyperf-contrib/open-telemetry",
  "description": "OpenTelemetry component for Hyperf",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "open-telemetry/sdk": "^1.1",
    "open-telemetry/sem-conv": "^1.27",
    "hyperf/event": "~3.1.0",
    "hyperf/di": "~3.1.0",
    "hyperf/database": "~3.1.0",
    "open-telemetry/api": "^1.1",
    "hyperf/http-server": "~3.1.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "HyperfContrib\\OpenTelemetry\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Flc",
      "email": "four_leaf_clover@foxmail.com"
    }
  ],
  "extra": {
    "hyperf": {
      "config": "HyperfContrib\\OpenTelemetry\\ConfigProvider"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": false,
      "tbachert/spi": false
    }
  }
}
